<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="3dp"/>
            <gradient
                android:angle="90"
                android:endColor="@color/colorBackgroundBar" />
        </shape>
    </item>
    <item>
        <clip>
            <shape android:shape="rectangle" >
                <corners android:radius="3dp" />

                <gradient
                    android:angle="90"
                    android:endColor="@color/colorAttackBarDark"
                    android:startColor="@color/colorAttackBar" />
            </shape>
        </clip>
    </item>
</layer-list>